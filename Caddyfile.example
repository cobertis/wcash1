# Configuración de Caddy para Walgreens Scanner
# Copia este archivo como "Caddyfile" y edita tu dominio

# Reemplaza "tu-dominio.com" con tu dominio real
tu-dominio.com {
    # Habilitar HTTPS automático
    encode gzip

    # Logs
    log {
        output file /var/log/caddy/walgreens-scanner.log
        format json
    }

    # Proxy a Node.js
    reverse_proxy localhost:5000 {
        # Headers importantes
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
        
        # WebSocket support (CRÍTICO para progreso en tiempo real)
        header_up Connection {>Connection}
        header_up Upgrade {>Upgrade}
    }

    # Health check
    handle /health {
        reverse_proxy localhost:5000
    }

    # Timeouts largos para archivos grandes
    request_body {
        max_size 100MB
    }

    # Headers de seguridad
    header {
        # Security headers
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        
        # Remove server info
        -Server
    }
}

# Redirect www to non-www (opcional)
www.tu-dominio.com {
    redir https://tu-dominio.com{uri} permanent
}
