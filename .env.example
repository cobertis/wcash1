# ===================================
# CONFIGURACIÓN MÍNIMA REQUERIDA
# ===================================

# 1. BASE DE DATOS (OBLIGATORIO)
# PostgreSQL - Reemplaza con tus credenciales
DATABASE_URL=postgresql://walgreens:your_password@localhost:5432/walgreens_scanner

# 2. ADMIN LOGIN (OBLIGATORIO)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123

# 3. SECURITY (OBLIGATORIO)
# Genera random: openssl rand -base64 32
SESSION_SECRET=change-this-to-a-very-long-random-string

# 4. SERVER (OPCIONAL - defaults mostrados)
NODE_ENV=production
PORT=5000

